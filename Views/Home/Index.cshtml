@model List<Mascota>

<h1>Mascotas para adopcion</h1>

<form asp-action="index" method="get">
    Filtar por tipo mascota:
    <select name="tipomascota">
        <option value="0">Todos</option>
        @foreach (var t in (List<TipoMascota>)ViewBag.Tipos)
        {
            <option value="@t.ID">@t.Nombre</option>
        }
    </select>
    <button>Filtar</button>
</form>

@if(Model.Count == 0){
    <p>Aun no hay mascotas para adoptar.</p>
}

<div class="text-center">
    
    @foreach (var m in Model)
    {
        <h2>@m.NombreTemporal</h2>
        <img src="@m.Foto" width="300">
        <p>Tipo : @m.Tipo.Nombre</p>
    }

</div>